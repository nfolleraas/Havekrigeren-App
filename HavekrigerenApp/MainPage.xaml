<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HavekrigerenApp.MainPage">
    
    <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
        
        <Image
            Source="havekrigeren_logo.webp"
            HeightRequest="185"
            Aspect="AspectFit"
            />

        <Label
            Text="Havekrigeren App"
            Style="{StaticResource Headline}" 
            />

        <Label
            Text="Brugernavn"
            FontSize="15"
            />

        <Entry
            x:Name="UsernameEntry"
            Placeholder="Indtast..."
            FontSize="20"
            TextChanged="OnTextChanged"
            />

        <Label
            Text="Adgangskode"
            FontSize="15"
            />

        <Entry
            x:Name="PasswordEntry"
            Placeholder="Indtast..."
            FontSize="20"
            TextChanged="OnTextChanged"
            />

        <Button
            x:Name="LoginButton"
            Text="Log ind"
            IsEnabled="False"
            HorizontalOptions="Fill"
            Clicked="OnLoginClicked"
            />

        <Label
            x:Name="ForgottenPassword"
            Text="Glemt adgangskode?"
            HorizontalTextAlignment="Center"
            />
    </VerticalStackLayout>



</ContentPage>
