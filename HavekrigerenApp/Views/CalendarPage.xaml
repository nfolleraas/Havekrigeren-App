             x:Class="HavekrigerenApp.CalendarPage">

    <ScrollView>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackLayout Orientation="Horizontal" Padding="10" Grid.Row="0">
            <Label Text="Kalender" HeightRequest="50" FontSize="Title" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand"/>
        </StackLayout>

        <!-- Main Content -->
        <StackLayout Orientation="Vertical" Margin="25,0,25,0" VerticalOptions="FillAndExpand" Grid.Row="1">
            <Label Text="yo"/>
        </StackLayout>
    </Grid>
    </ScrollView>
</ContentPage>