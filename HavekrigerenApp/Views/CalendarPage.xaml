<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:calendar="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
             xmlns:controls="clr-namespace:HavekrigerenApp.Controls;assembly=HavekrigerenApp"
             x:Class="HavekrigerenApp.CalendarPage">

    <Shell.TitleView>
        <Label Text="Kalender" Style="{StaticResource shellTitleStyle}"/>
    </Shell.TitleView>

    <ScrollView>
        <StackLayout Style="{StaticResource defaultStackLayoutStyle}">
            <Label Text="yo"/>

            <calendar:Calendar Culture="{Binding Culture}" FirstDayOfWeek="Monday"
                               DaysTitleColor="{StaticResource PrimaryText}" DeselectedDayTextColor="{StaticResource PrimaryText}"
                               DaysTitleWeekendColor="Red" WeekendDayColor="Red"
                               SelectedDayTextColor="{StaticResource Gray500}" SelectedDayBackgroundColor="{StaticResource SecondaryDark}"
                               OtherMonthDayColor="{StaticResource Placeholder}"
                               Events="{Binding Events}">

                <calendar:Calendar.EventTemplate>
                    <DataTemplate>
                        <StackLayout
                Padding="15,0,0,0">
                            <Label
                    Text="{Binding ContactName}"
                    FontAttributes="Bold"
                    FontSize="Medium" />
                            <Label
                    Text="{Binding Address}"
                    FontSize="Small"
                    LineBreakMode="WordWrap" />
                            <Label
Text="{Binding PhoneNumber}"
FontSize="Small"
LineBreakMode="WordWrap" />
                        </StackLayout>
                    </DataTemplate>
                </calendar:Calendar.EventTemplate>

                <calendar:Calendar.HeaderSectionTemplate>
                    <controls:CalendarHeader/>
                </calendar:Calendar.HeaderSectionTemplate>

            </calendar:Calendar>
        </StackLayout>
    </ScrollView>
</ContentPage>