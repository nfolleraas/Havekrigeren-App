<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="HavekrigerenApp.HomePage" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Shell.TitleView>
        <Label Style="{StaticResource shellTitleStyle}" Text="Hjem" />
    </Shell.TitleView>

    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsRefreshing}"
                 RefreshColor="{StaticResource Primary}"
                 Style="{StaticResource defaultStackLayoutStyle}">
        <Grid RowDefinitions="Auto, *, Auto">
            <!--  Search Bar  -->
            <StackLayout Grid.Row="0">
                <Border Padding="0" BackgroundColor="Transparent">
                    <SearchBar Placeholder="Søg..." Text="{Binding SearchBoxInput}" />
                </Border>

                <Label Margin="0,10,0,5" FontSize="Medium"
                       IsVisible="{Binding ShowSearchResults}"
                       Text="Søgeresultater" />

                <Label Margin="0,10,0,5" FontSize="Medium"
                       IsVisible="{Binding ShowAllJobs}"
                       Text="Alle Opgaver" />

                <Label Margin="0,10,0,5" FontSize="Medium"
                       IsVisible="{Binding ShowIncomingJobs}"
                       Text="Kommende Opgaver" />
            </StackLayout>

            <!--  Show All Jobs  -->
            <CollectionView Grid.Row="1"
                            Background="{StaticResource Background}"
                            HeightRequest="475"
                            IsVisible="{Binding ShowAllJobs}"
                            ItemsSource="{Binding JobsVM}"
                            VerticalOptions="Start">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,10,0,0" Padding="5">
                            <Grid ColumnDefinitions="*, Auto">

                                <!--  Job Info  -->
                                <StackLayout>
                                    <Label Grid.Column="0" FontAttributes="Bold"
                                           FontSize="Medium" LineBreakMode="TailTruncation"
                                           MaximumWidthRequest="300"
                                           Text="{Binding Category}"
                                           VerticalTextAlignment="Center" />
                                    <Label Grid.Column="0" FontAttributes="None"
                                           FontSize="Medium" LineBreakMode="TailTruncation"
                                           MaximumWidthRequest="300"
                                           Text="{Binding ContactName}"
                                           VerticalTextAlignment="Center" />

                                    <Label Grid.Column="0" FontSize="Small"
                                           LineBreakMode="TailTruncation" MaximumWidthRequest="300"
                                           VerticalTextAlignment="Center">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span FontAttributes="Italic" Text="{Binding Address}" />
                                                <Span FontAttributes="Italic" Text=" , " />
                                                <Span FontAttributes="Italic" Text="{Binding FormattedPhoneNumber}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>

                                <!--  See More  -->
                                <Label Grid.Column="1" FontSize="Header"
                                       Text="Se mere ▶" VerticalTextAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--  Show Incoming Jobs  -->
            <CollectionView Grid.Row="1"
                Background="{StaticResource Background}"
                HeightRequest="475"
                IsVisible="{Binding ShowIncomingJobs}"
                ItemsSource="{Binding JobsVMSortedByDate}"
                VerticalOptions="Start">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,10,0,0" Padding="5">
                            <Grid ColumnDefinitions="*, Auto">

                                <!--  Job Info  -->
                                <StackLayout>
                                    <Label FontSize="Medium"
                                               VerticalTextAlignment="Center" LineBreakMode="TailTruncation" 
                                               MaximumWidthRequest="300" 
                                               Grid.Column="0">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding StartDate, StringFormat='{}{0:dd/MM-yyyy}'}" FontAttributes="Italic"/>
                                                <Span Text=" til " FontAttributes="Italic"/>
                                                <Span Text="{Binding EndDate, StringFormat='{}{0:dd/MM-yyyy}'}" FontAttributes="Italic"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <Label Text="{Binding ContactName}" FontSize="Small" FontAttributes="None" 
                                        VerticalTextAlignment="Center" LineBreakMode="TailTruncation" 
                                        MaximumWidthRequest="300" 
                                        Grid.Column="0"/>
                                    <Label Text="{Binding Address}" FontSize="Small" FontAttributes="Italic" 
                                        VerticalTextAlignment="Center" LineBreakMode="TailTruncation" 
                                        MaximumWidthRequest="300" 
                                        Grid.Column="0"/>
                                </StackLayout>

                                <!--  See More  -->
                                <Label Grid.Column="1" FontSize="Header"
                           Text="Se mere ▶" VerticalTextAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Grid Grid.Row="2" Margin="10"
                  ColumnDefinitions="Auto, 10, Auto" HorizontalOptions="Center">

                <Button Grid.Column="0" Padding="5"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource PrimaryDark}"
                        BorderWidth="1"
                        Command="{Binding ToggleAllJobsCommand}"
                        Text="Se Alle"
                        TextColor="{StaticResource PrimaryText}"
                        WidthRequest="110" />

                <Button Grid.Column="2" Padding="5"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource PrimaryDark}"
                        BorderWidth="1"
                        Command="{Binding ToggleIncomingJobsCommand}"
                        Text="Se Kommende"
                        TextColor="{StaticResource PrimaryText}"
                        WidthRequest="110" />
            </Grid>

        </Grid>
    </RefreshView>


</ContentPage>