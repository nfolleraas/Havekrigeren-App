<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HavekrigerenApp.Models.Handlers"
             xmlns:viewmodels="clr-namespace:HavekrigerenApp.ViewModels"
             x:Class="HavekrigerenApp.HomePage">

    <Shell.TitleView>
        <Label Text="Hjem" Style="{StaticResource shellTitleStyle}"/>
    </Shell.TitleView>

    <Shell.SearchHandler>
        <controls:JobSearchHandler Placeholder="SÃ¸g..." ShowsResults="true" Jobs="{Binding Jobs}"/>
    </Shell.SearchHandler>

    <CollectionView ItemsSource="{Binding FilteredJobs}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5">
                    <StackLayout>
                        <Label Text="{Binding ContactName}" FontSize="Medium"/>
                        <Label Text="{Binding Address}" FontSize="Medium"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>