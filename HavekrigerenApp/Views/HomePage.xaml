<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CustomizeHandlers.Controls;assembly=CustomizeHandlers"
             x:Class="HavekrigerenApp.HomePage">

    <Shell.TitleView>
        <Label Text="Hjem" Style="{StaticResource shellTitleStyle}"/>
    </Shell.TitleView>
    
    <ScrollView>
        <StackLayout Orientation="Vertical" Margin="25,0,25,0" VerticalOptions="FillAndExpand">
            <!--
            <SearchBar x:Name="searchBar" Placeholder="Søg..."
                       SearchCommand="{Binding PerformSearchCommand}" SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"/>
            

            -->
            
            <controls:SearchBarLang
                x:Name="searchBar" Placeholder="Søg..."
                BackgroundColor="{StaticResource Secondary}"
                TextColor="{StaticResource PrimaryText}"
                SearchCommand="{Binding PerformSearchCommand}" SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"/>

            <ListView x:Name="searchResults" ItemsSource="{Binding SearchResults}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>