<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HavekrigerenApp.Pages.ViewAllCategoriesPage"
             Title="Vis Alle Kategorier"
             Shell.NavBarIsVisible="True">

    <AbsoluteLayout>
        <ScrollView
            AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
            AbsoluteLayout.LayoutFlags="All" >

            <VerticalStackLayout
                x:Name="viewAllCategoriesLayout"
                Padding="10" >

                <!--List of programmable inserted fields-->

            </VerticalStackLayout>
        </ScrollView>

        <Button
            x:Name="createCategory"
            ImageSource="Resources/Icons/create.png"
            BackgroundColor="Red"
            TextColor="White"
            CornerRadius="100"
            WidthRequest="80"
            HeightRequest="80"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AbsoluteLayout.LayoutBounds="0.9, 0.9, AutoSize, AutoSize"
            VerticalOptions="End"
            HorizontalOptions="End"
            Clicked="OnCreateCategoryClicked" />

    </AbsoluteLayout>

</ContentPage>