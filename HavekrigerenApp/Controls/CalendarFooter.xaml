<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Class="HavekrigerenApp.Controls.CalendarFooter" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid ColumnDefinitions="Auto" HeightRequest="40"
          HorizontalOptions="Fill" RowSpacing="6"
          VerticalOptions="Fill">
        
        <Label Grid.Column="0" FontAttributes="Bold"
               FontSize="Medium"
               Text="{Binding SelectedDateText}"
               TextColor="{StaticResource PrimaryText}"
               VerticalOptions="Center" VerticalTextAlignment="Center" />
    </Grid>
</ContentView>
