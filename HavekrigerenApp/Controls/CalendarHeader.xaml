<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HavekrigerenApp.Controls.CalendarHeader">
    
    <Grid
        Margin="0,2"
        Padding="0"
        HorizontalOptions="Fill"
        IsVisible="{Binding ShowMonthPicker}"
        VerticalOptions="Start"
        RowDefinitions="Auto"
        ColumnDefinitions="1*,3*,1*">
        <Border
            Grid.Column="0"
            Padding="0"
            Background="Transparent"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 100"           
            HeightRequest="32"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="64">
            
            <Image Source="arrow_left_1x.png" Scale="0.8" 
                   HorizontalOptions="Center" VerticalOptions="Center"/>
            
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding PrevLayoutUnitCommand}" />
            </Border.GestureRecognizers>
        </Border>

        <Label
            Grid.Column="1"
            FontAttributes="Bold"
            FontSize="Title"
            HorizontalOptions="Center"
            TextColor="{Binding MonthLabelColor}"
            VerticalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="{Binding LayoutUnitText, Mode=TwoWay}" />
                    <Span Text=", " />
                    <Span Text="{Binding Year, Mode=TwoWay}" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Border
            Grid.Column="2"
            Padding="0"
            Background="Transparent"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 100"           
            HeightRequest="32"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="64">

            <Image Source="arrow_right_1x.png" Scale="0.8" 
                   HorizontalOptions="Center" VerticalOptions="Center"/>

            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NextLayoutUnitCommand}" />
            </Border.GestureRecognizers>
        </Border>
    </Grid>
</DataTemplate>
