<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HavekrigerenApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HavekrigerenApp"
    Shell.FlyoutBehavior="Disabled"
    Title="HavekrigerenApp">

    <TabBar>
        <ShellContent
            Icon="home.png"
            ContentTemplate="{DataTemplate local:HomePage}"
            Route="HomePage" />

        <ShellContent
            Icon="list.png"
            ContentTemplate="{DataTemplate local:ViewAllCategoriesPage}"
            Route="ViewAllCategoriesPage" />

        <ShellContent
            Icon="create.png"
            ContentTemplate="{DataTemplate local:CreateJobPage}"
            Route="CreateJobPage" />

        <ShellContent
            Icon="calendar.png"
            ContentTemplate="{DataTemplate local:CalendarPage}"
            Route="CalendarPage" />

        <ShellContent
            Icon="user.png"
            ContentTemplate="{DataTemplate local:UserPage}"
            Route="UserPage" />

    </TabBar>

    <ShellContent
        Title="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="ViewAllJobsPage"
        ContentTemplate="{DataTemplate local:ViewAllJobsPage}"
        Route="ViewAllJobsPage" />

    <ShellContent
        Title="ViewJobPage"
        ContentTemplate="{DataTemplate local:ViewJobPage}"
        Route="ViewJobPage" />

    <ShellContent
        Title="CreateCategoryPage"
        ContentTemplate="{DataTemplate local:CreateCategoryPage}"
        Route="CreateCategoryPage" />

</Shell>
